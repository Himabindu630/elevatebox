class Codechef
{
  public static void main(String[] args) throws java.lang.Exception 
  {
    Scanner sc=new Scanner (System.in);
    int t= sc.nextInt();
    for(int j = 0;j<t;j++){
      int n = sc.nextInt();
      int x = sc.nextInt();
      int[] arr = new int[n];
      for(int i=0;i<n;i++){
        if(x==arr[i]){
          flag=1;
          System.out.println(i);
          break;
          }
      }
      if(flag==0){
        System.out.println("-1");
      }
  }
}
